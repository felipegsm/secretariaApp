<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerfilActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="122dp">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:id="@+id/linearLayout2"
                                                     app:layout_constraintTop_toTopOf="@+id/btnRegistros"
                                                     app:layout_constraintBottom_toTopOf="@+id/btnRegistros">
            <TextView
                    android:text="UsuÃ¡rio:"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/topUsuario"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="Nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNome"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/topUsuario"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Telefone:"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/topTelefone"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtNome"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Telefone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTelefone"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/topTelefone"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Email:"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/topEmail"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtTelefone"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEmail"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/topEmail"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Meus Registros"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content" android:id="@+id/btnRegistros"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmail" android:layout_marginTop="24dp"/>
            <Button
                    android:text="Criar novo registro"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content" android:id="@+id/btnNovoRegistro"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegistros" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"/>
            <Button
                    android:text="Logout"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content" android:id="@+id/btnSair"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnEditarPerfil"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.543"/>
            <Button
                    android:text="Editar Perfil"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnEditarPerfil"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnNovoRegistro"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.543"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>