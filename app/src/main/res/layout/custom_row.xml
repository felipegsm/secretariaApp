<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Ocorrência "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtOcorrencia" android:layout_marginLeft="35dp"
                android:layout_marginBottom="5dp" android:textSize="24sp"/>
        <TextView
                android:text="Endereço"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOcorrencia"
                android:id="@+id/txtEndereco" android:layout_marginLeft="35dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtStatus"
                android:layout_below="@+id/txtEndereco"
                android:layout_marginLeft="35dp" android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>